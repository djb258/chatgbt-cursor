# ChatGPT Commander Cloud API Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=production

# Security
ALLOWED_ORIGINS=https://your-domain.com,https://chat.openai.com

# Database (for production - currently using in-memory storage)
# DATABASE_URL=mongodb://localhost:27017/chatgpt-commander
# DATABASE_URL=postgresql://user:password@localhost:5432/chatgpt-commander

# API Keys (optional - for additional security)
# API_KEY=your-secret-api-key

# Webhook Configuration
# WEBHOOK_SECRET=your-webhook-secret

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 